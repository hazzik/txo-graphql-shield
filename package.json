{
  "name": "@txo/graphql-shield-monorepo",
  "private": true,
  "author": "Matic Zavadlal <matic.zavadlal@gmail.com>",
  "license": "MIT",
  "workspaces": [
    "packages/@txo/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": "main"
  },
  "scripts": {
    "prepare": "husky install",
    "prebuild": "rimraf packages/*/dist",
    "build": "node scripts/build.js",
    "test": "jest",
    "test:ci": "jest --coverage",
    "coverage": "codecov",
    "prepublishOnly": "yarn build",
    "prettier": "prettier --ignore-path .gitignore --write --list-different \"**/*.{ts,tsx,graphql,yml}\""
  },
  "devDependencies": {
    "@types/jest": "26.0.24",
    "@types/node": "15.6.1",
    "codecov": "^3.8.3",
    "husky": "6.0.0",
    "jest": "27.4.7",
    "lint-staged": "11.2.6",
    "multi-semantic-release": "^2.13.0",
    "prettier": "2.4.1",
    "pretty-quick": "3.1.3",
    "rimraf": "3.0.2",
    "semantic-release": "^19.0.3",
    "ts-jest": "27.1.5",
    "ts-node": "10.4.0",
    "typescript": "4.3.5"
  },
  "resolutions": {
    "prettier": "2.4.1"
  }
}
